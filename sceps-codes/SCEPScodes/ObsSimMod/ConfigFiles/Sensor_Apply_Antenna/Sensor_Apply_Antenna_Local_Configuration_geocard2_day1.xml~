<?xml version="1.0" encoding="UTF-8"?>
<Sensor_Apply_Antenna_Local_Configuration version="0.1">
	<parameter name="time_length_hours" description="Time of the sensor simulation along the orbit in hours, typical value is around 0.3" type="FLOAT">0.32</parameter>
	<parameter name="band_selection" description="Selecting the instrument bands L-C-X-Ku-Ka with a sequence e.g. 1 0 1 0 0 to do L and X" type="STRING">1 0 0 0 0</parameter>
	<parameter name="orbit_type" description="This selects if the simulation is done with the ascending 'asc' or descending 'des' orbit" type="STRING">asc</parameter>
	<parameter name="integration_sampling_step" description="This selects if the antenna integrations are done for the full nominal integration time 'one-step' or dividing the nominal integration time in 5 equally spaced time intervals 'five-steps'" type="STRING">one-step</parameter>
	<parameter name="antenna_beam_type" description="This selects the main beam part of the antenna pattern for the integrations, down to the first contour of 40 dB or 60 dB below peak" type="STRING">40db</parameter>
	<parameter name="scan_start" description="Start of the scan" type="FLOAT">0</parameter>
	<parameter name="scan_end" description="End of the scan" type="FLOAT">5000</parameter>
	<parameter name="nedt_150K_L" description="NeDT for L-band specified at 150K" type="FLOAT">0.3</parameter>
	<parameter name="nedt_150K_C" description="NeDT for C-band specified at 150K" type="FLOAT">0.2</parameter>
	<parameter name="nedt_150K_X" description="NeDT for X-band specified at 150K" type="FLOAT">0.3</parameter>
	<parameter name="nedt_150K_Ku" description="NeDT for Ku-band specified at 150K" type="FLOAT">0.4</parameter>
	<parameter name="nedt_150K_Ka" description="NeDT for Ka-band specified at 150K" type="FLOAT">0.7</parameter>
</Sensor_Apply_Antenna_Local_Configuration>


